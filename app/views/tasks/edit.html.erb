<div class="container text-center ">
  <div class="row">
    <div class="col-xs-6 col-xs-offset-3">
      <div class="jumbotron form-inline">
        <%= form_for(@task) do |f| %>

        <div class="form-group">
          <%= f.label :title %>
          <%= f.text_field :title, class: 'form-control input-form' %>
        </div>
        <div class="form-group">
          <%= f.label :details %>
          <%= f.text_field :details, class: 'form-control input-form' %>
        </div>
        <div class="form-group">
          <%= f.label :completed %>
          <%= f.check_box :completed %>
        </div>
        <%= f.submit class: 'btn btn-info' %>
        <% end %>
      </div>
    </div>
  </div>
</div>
