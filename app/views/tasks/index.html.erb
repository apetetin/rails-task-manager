<h2>My tasks</h2>
<ul>
  <% @tasks.each do |task| %>
  <li>
    <h3><small><%= task.completed ? "[X] " : "[ ] " %><%= link_to task.title, task_path(task) %></h3>
      <h4><%= task.details %></h4>
      <h5><%= link_to 'Update ?', edit_task_path(task) %></h5>
      <h5><%= link_to 'Delete ?', task_path(task), method: :delete %></h5>
    </li>
    <% end %>
  </ul>
  <div class="wrapper">
    <h5><%= link_to 'Create a new task?', 'tasks/new' %></h5>
  </div>
